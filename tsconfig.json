{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.0.0",
  "compilerOptions": {
    "baseUrl": "./packages",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "paths": {
      "@acme/*": [
        "./*/src"
      ]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "display": "Node 20"
}